{
  "name": "copy-code-context",
  "displayName": "Copy Context Extension",
  "description": "Copies selected files/folders as Markdown code context or structure",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.copyCodeContext",
        "title": "Copy Code Context"
      },
      {
        "command": "extension.copyFolderStructure",
        "title": "Copy Folder Structure"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "extension.copyCodeContext",
          "when": "resourceLangId",
          "group": "navigation"
        },
        {
          "command": "extension.copyFolderStructure",
          "when": "resourceLangId",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Copy Context Extension Configuration",
      "properties": {
        "myCopyContext.includeGlobs": {
          "type": "array",
          "default": [
            "**/*.js",
            "**/*.ts",
            "**/*.jsx",
            "**/*.tsx"
          ],
          "description": "Glob patterns for files to include in Copy Code Context"
        },
        "myCopyContext.excludeGlobs": {
          "type": "array",
          "default": [
            "**/node_modules/**"
          ],
          "description": "Glob patterns for files to exclude"
        },
        "myCopyContext.maxContentSize": {
          "type": "number",
          "default": 500000,
          "description": "Max total content size in bytes to copy. Prevents copying extremely large files."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/minimatch": "^5.1.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.97.0",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.16.0",
    "typescript": "^5.7.2"
  }
}
