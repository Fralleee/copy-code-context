{
	"name": "copy-code-context",
	"displayName": "Copy Code Context",
	"description": "Copies selected files/folders as Markdown code context or structure",
	"publisher": "fralle",
	"homepage": "https://github.com/Fralleee/copy-code-context#readme",
	"icon": "images/icon.png",
	"license": "MIT",
	"version": "0.2.0",
	"engines": {
		"vscode": "^1.97.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/Fralleee/copy-code-context.git"
	},
	"categories": ["Other", "Visualization"],
	"activationEvents": [],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.copyCode",
				"title": "Copy Code Context"
			},
			{
				"command": "extension.copyStructure",
				"title": "Copy Folder Structure"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "extension.copyCode",
					"when": "false"
				},
				{
					"command": "extension.copyStructure",
					"when": "false"
				}
			],
			"explorer/context": [
				{
					"command": "extension.copyCode",
					"group": "6_copycodecontext@10"
				},
				{
					"command": "extension.copyStructure",
					"group": "6_copycodecontext@10"
				}
			]
		},
		"configuration": {
			"type": "object",
			"title": "Copy Context Extension Configuration",
			"properties": {
				"copyContext.respectVSCodeExplorerExclude": {
					"type": "boolean",
					"default": true,
					"description": "Skip any files or folders hidden in the VS Code Explorer (i.e. respect your `files.exclude` settings)."
				},
				"copyContext.respectGitIgnore": {
					"type": "boolean",
					"default": false,
					"description": "Skip files matching your project's `.gitignore`. Turn this on to avoid accidentally copying ignored build artifacts."
				},
				"copyContext.includeGlobs": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"default": [],
					"description": "Additional glob patterns to always include when copying context, even if other filters would exclude them."
				},
				"copyContext.excludeGlobs": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"default": [],
					"description": "Additional glob patterns to always exclude when copying context, even if other filters would include them."
				},
				"copyContext.maxContentSize": {
					"type": "number",
					"default": 500000,
					"description": "Max total content size in bytes to copy. Prevents copying extremely large files."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"lint": "biome lint .",
		"test": "vitest",
		"knip": "knip"
	},
	"dependencies": {
		"file-type": "^16.5.4",
		"ignore": "^7.0.4",
		"istextorbinary": "^9.5.0",
		"minimatch": "^5.1.2"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/commit-analyzer": "^13.0.1",
		"@semantic-release/exec": "^7.0.3",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "^11.0.1",
		"@semantic-release/release-notes-generator": "^14.0.3",
		"@types/minimatch": "^5.1.2",
		"@types/mocha": "^10.0.10",
		"@types/node": "^20.17.24",
		"@types/vscode": "^1.97.0",
		"@vitest/coverage-c8": "^0.33.0",
		"@vscode/test-cli": "^0.0.10",
		"@vscode/test-electron": "^2.4.1",
		"knip": "^5.46.0",
		"semantic-release": "^24.2.3",
		"typescript": "^5.8.2",
		"vitest": "^3.1.2"
	}
}
