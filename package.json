{
	"activationEvents": [],
	"categories": [
		"Other",
		"Visualization"
	],
	"contributes": {
		"commands": [
			{
				"command": "extension.copyCode",
				"title": "Copy Code Context"
			},
			{
				"command": "extension.copyCode.thisTab",
				"title": "Copy Code Context (This Tab)"
			},
			{
				"command": "extension.copyCode.allTabs",
				"title": "Copy Code Context (All Open Tabs)"
			},
			{
				"command": "extension.copyStructure",
				"title": "Copy Folder Structure"
			}
		],
		"configuration": {
			"properties": {
				"copyContext.excludeGlobs": {
					"default": [],
					"description": "Glob patterns to always exclude (highest priority), even if they match `includeGlobs`.",
					"items": {
						"type": "string"
					},
					"type": "array"
				},
				"copyContext.includeGlobs": {
					"default": [],
					"description": "Glob patterns to always include, unless explicitly excluded by `excludeGlobs`.",
					"items": {
						"type": "string"
					},
					"type": "array"
				},
				"copyContext.maxContentSize": {
					"default": 500000,
					"description": "Max total content size in bytes to copy. Prevents copying extremely large files.",
					"type": "number"
				},
				"copyContext.respectGitIgnore": {
					"default": false,
					"description": "Skip any files matching `.gitignore` (opt-in).",
					"type": "boolean"
				},
				"copyContext.respectVSCodeExplorerExclude": {
					"default": true,
					"description": "Skip any files or folders hidden in the VS Code Explorer (i.e. respect your `files.exclude`).",
					"type": "boolean"
				}
			},
			"title": "Copy Context Extension Configuration",
			"type": "object"
		},
		"menus": {
			"editor/title/context": [
				{
					"arguments": [
						"${resourceUri}"
					],
					"command": "extension.copyCode.thisTab",
					"group": "1_copycode"
				},
				{
					"command": "extension.copyCode.allTabs",
					"group": "1_copycode"
				}
			],
			"explorer/context": [
				{
					"command": "extension.copyCode",
					"group": "6_copycodecontext@10"
				},
				{
					"command": "extension.copyStructure",
					"group": "6_copycodecontext@10"
				}
			]
		}
	},
	"dependencies": {
		"file-type": "^16.5.4",
		"ignore": "^7.0.4",
		"istextorbinary": "^9.5.0",
		"minimatch": "^5.1.2"
	},
	"description": "Copies selected files/folders as Markdown code context or structure",
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/commit-analyzer": "^13.0.1",
		"@semantic-release/exec": "^7.0.3",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "^11.0.1",
		"@semantic-release/release-notes-generator": "^14.0.3",
		"@types/minimatch": "^5.1.2",
		"@types/mocha": "^10.0.10",
		"@types/node": "^20.17.24",
		"@types/vscode": "^1.99.1",
		"knip": "^5.46.0",
		"semantic-release": "^24.2.3",
		"typescript": "^5.8.2",
		"vitest": "^3.1.2"
	},
	"displayName": "Copy Code Context",
	"engines": {
		"vscode": "^1.99.2"
	},
	"homepage": "https://github.com/Fralleee/copy-code-context#readme",
	"icon": "images/icon.png",
	"license": "MIT",
	"main": "./out/extension.js",
	"name": "copy-code-context",
	"publisher": "fralle",
	"repository": {
		"type": "git",
		"url": "https://github.com/Fralleee/copy-code-context.git"
	},
	"scripts": {
		"compile": "tsc -p ./",
		"knip": "knip",
		"lint": "biome lint .",
		"test": "vitest",
		"vscode:prepublish": "npm run compile",
		"watch": "tsc -watch -p ./"
	},
	"version": "0.4.0"
}
