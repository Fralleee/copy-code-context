{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["out"]
	},
	"formatter": {
		"enabled": true
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": {
					"fix": "safe",
					"level": "error"
				}
			},
			"suspicious": {
				"noConsole": "error",
				"useAwait": "error"
			}
		}
	},
	"assists": {
		"enabled": true,
		"actions": { "source": { "useSortedKeys": "on" } }
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
