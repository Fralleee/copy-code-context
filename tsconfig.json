{
	"compilerOptions": {
		"esModuleInterop": true,
		"lib": ["ES2022"],
		"module": "Node16",
		"moduleResolution": "node16",
		"outDir": "out",
		"resolveJsonModule": true,
		"rootDir": "./src",
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "ES2022"
	},
	"exclude": ["node_modules", "out", "**/*.test.ts"]
}
