{
	"compilerOptions": {
		"module": "Node16",
		"moduleResolution": "node16",
		"target": "ES2022",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"outDir": "out",
		"lib": ["ES2022"],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true
	},
	"exclude": ["node_modules", "out", "**/*.test.ts"]
}
